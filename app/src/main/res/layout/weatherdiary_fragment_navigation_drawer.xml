<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="10.0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3.0"
        android:weightSum="1.0"
        android:background="#777"
        android:layout_width="match_parent"
        android:layout_height="256dp">
        <ImageView
            android:layout_weight="0.7"
            android:src="@drawable/weather_icon_l"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/weatherdiary_navigation_drawer"
        android:layout_weight="6.0"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.02dp"
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavigationDrawerFragment"/>
    <LinearLayout
        android:id="@+id/weatherdiary_navigation_drawer_easter_layout"
        android:layout_weight="1.0"
        android:weightSum="1.0"
        android:orientation="horizontal"
        android:background="#777"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:src="@drawable/mbkcorp_logo"
            android:paddingLeft="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0.8"
            android:text="MBK Corporation"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingRight="16dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>